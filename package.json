{
  "name": "horserace",
  "version": "0.1.2",
  "main": "target/dist/main.js",
  "build": {
    "files": [
      "target/dist/**/*",
      "package.json"
    ],
    "asar": false,
    "directories": {
      "output": "target"
    },
    "win": {
      "requestedExecutionLevel": "highestAvailable",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "scripts": {
    "build:main": "tsc --project tsconfig.json",
    "build:renderer": "vite build --config vite.config.js",
    "build:release": "electron-builder",
    "build": "npm run build:main && npm run build:renderer && npm run build:release",
    "start:dev": "vite --config vite.config.js",
    "start": "chcp 65001 && electron ./target/dist/main.js"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "debug": "^4.3.4",
    "pinia": "^2.0.20",
    "rxjs": "^7.5.6",
    "vue": "^3.2.37",
    "vue-router": "^4.1.4",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "@vitejs/plugin-vue": "^3.0.3",
    "autoprefixer": "^10.4.8",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "eslint": "^8.22.0",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4",
    "vite": "^3.0.9"
  }
}
